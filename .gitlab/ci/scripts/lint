#!/usr/bin/env bash

if [[ $1 == "" ]]; then
  echo "Requires 1 arg to run the linter!"
fi

BASEDIR=$(git rev-parse --show-toplevel)
DIR=$(dirname "$BASEDIR/$1")

echo "Target directory: $DIR"; sleep 5
echo
echo "============================== SHELLCHECK RESULTS =============================="
"$BASEDIR/.gitlab/ci/scripts/lint-scripts" "$DIR" || export CHECK_FAILED_SC=1
echo "============================== SHELLCHECK RESULTS =============================="
echo
echo "============================== HADOLINT RESULTS =============================="
"$BASEDIR/.gitlab/ci/scripts/lint-dockerfile" "$1" || export CHECK_FAILED_HL=1
echo "============================== HADOLINT RESULTS =============================="
echo
echo "============================== SUMMARY =============================="
if [[ $CHECK_FAILED_SC == "1" ]]; then
  echo "ShellCheck: Found some serious problems on scripts or ShellCheck isn't installed on system/not on PATH ‚ùå"
else
  echo "ShellCheck: No issues found, nice üéâ"
fi
if [[ $CHECK_FAILED_HL == "1" ]]; then
  echo "Hadolint: Found some serious problems on Dockerfiles or Hadolint isn't installed on system/not on PATH ‚ùå"
else
  echo "Hadolint: No issues found, nice üéâ"
fi

echo "============================== SUMMARY =============================="

if [[ $CHECK_FAILED_SC == "1" || $CHECK_FAILED_HL == "1" ]]; then
  exit 1
else
  exit 0
fi
